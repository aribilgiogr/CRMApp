@using Core.Concretes.Enums
@model Core.Concretes.DTOs.CreateCustomerDTO

@{
    ViewData["Title"] = "ConvertToCustomer";
}

<div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
        <div class="bg-secondary rounded h-100 p-4">
            <form asp-action="ConvertToCustomer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label"></label>
                    <input asp-for="CompanyName" class="form-control bg-white" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TaxNumber" class="control-label"></label>
                    <input asp-for="TaxNumber" class="form-control bg-white" />
                    <span asp-validation-for="TaxNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Industry" class="control-label"></label>
                    <input asp-for="Industry" class="form-control bg-white" />
                    <span asp-validation-for="Industry" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control bg-white" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control bg-white" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control bg-white" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control bg-white" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control bg-white" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-select bg-white" asp-items="Html.GetEnumSelectList<CustomerStatus>()">
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <input asp-for="AssignedSalesPersonId" type="hidden" />
                <input asp-for="LeadId" type="hidden" />
                <div class="form-group">
                    <input type="submit" value="Convert" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
