@using Core.Concretes.Enums
@model IEnumerable<Core.Concretes.DTOs.LeadListDTO>

@{
    ViewData["Title"] = "Lead List";
}

@section Scripts {
    <partial name="_DataTablesScripts" />
    <script src="~/js/leadDataTable.js"></script>
}

@section Styles {
    <partial name="_DataTablesStyles" />
}

<div class="row">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <ul class="nav justify-content-end">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="btn btn-primary mb-3 btn-sm" asp-action="create" asp-controller="leads">Add New Lead</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-light mb-3 ms-2 btn-sm" asp-action="import" asp-controller="leads">Import Leads from File</a>
                    </li>
                }
                <li class="nav-item dropdown">
                    <a class="btn btn-info mb-3 ms-2 dropdown-toggle btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Export Leads
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-action="export" asp-controller="leads" asp-route-format="excel">Export to Excel</a></li>
                        <li><a class="dropdown-item" asp-action="export" asp-controller="leads" asp-route-format="csv">Export to CSV</a></li>
                        <li><a class="dropdown-item" asp-action="export" asp-controller="leads" asp-route-format="json">Export to JSON</a></li>
                    </ul>
                </li>
            </ul>
            <h6 class="mb-4">Lead List</h6>
            <div class="table-responsive">
                <table class="table" id="leads">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Source)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.AssignedSalesPersonId != null ? "text-success" : "")">
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Source)
                                </td>
                                <td>
                                    @if (item.AssignedSalesPersonId == null && !User.IsInRole("Admin"))
                                    {
                                        <a asp-action="pickLead" asp-controller="leads" asp-route-id="@item.Id">Pick</a>
                                    }
                                    else if (item.Status != LeadStatus.Converted.ToString())
                                    {
                                        <button type="button" class="btn btn-primary"
                                                data-bs-toggle="modal"
                                                data-bs-target="#activityModal"
                                                data-related-id="@item.Id">
                                            Add Activity
                                        </button>
                                        <a asp-action="converttocustomer" asp-route-leadid="@item.Id" class="btn btn-secondary">Convert To Customer</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <partial name="_AddActivityPartial" model="new ActivityCreateDTO()" />
            </div>
        </div>
    </div>
</div>